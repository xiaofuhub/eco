on m_quick_select.create
m_quick_select=this
this.m_file=create m_file
this.m_window=create m_window
this.Item[]={this.m_file, &
this.m_window}
end on

on m_quick_select.destroy
destroy(this.m_file)
destroy(this.m_window)
end on

