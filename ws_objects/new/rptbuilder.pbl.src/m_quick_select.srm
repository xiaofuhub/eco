event clicked;//Window w_quick_select is open explicitly to demonstrate that only one
//instance of this window should be opened at any given time
IF IsValid(w_quick_select) = TRUE THEN 
	w_quick_select.show()
ELSE
	open(w_quick_select)
END IF
end event

