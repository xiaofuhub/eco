event clicked;//////////////////////////////////////////////////////////////////////
// Print Report on Active sheet
//////////////////////////////////////////////////////////////////////

window	lw_active

lw_active = parentwindow.GetActiveSheet()
if IsValid (lw_active) then
	lw_active.TriggerEvent ("ue_printdw")
end if
end event

